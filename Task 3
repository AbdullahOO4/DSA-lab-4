#include<iostream>
using namespace std;
bool IsPrime(int n, int i) {
	if (i == 1) {
		return true ;
	}
	else {
		if (n % i == 0) {
			 return false;
		}
		return IsPrime(n, i - 1);
	}
}
int main() {
	int n;
	cout << "Enter a positve number: ";
	cin >> n;
	if (n >= 0) {
		if (IsPrime(n, n - 1)) {
			cout << "number is prime" << endl;
		}
		else {
			cout << "number is not a prime" << endl;
		}
	}
	else {
		cout << "number is negative " << endl;
	}
}
